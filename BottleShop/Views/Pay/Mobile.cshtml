@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=euc-kr" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <script>
        window.name = "BTPG_CLIENT";

        var width = 330;
        var height = 480;
        var xpos = (screen.width - width) / 2;
        var ypos = (screen.width - height) / 2;
        var position = "top=" + ypos + ",left=" + xpos;
        var features = position + ", width=320, height=440";
        function formSubmit() {
            on_web();
        }
        function on_web()
        {
            var order_form = document.form1;
            var wallet = window.open("", "BTPG_WALLET", features);
            if (wallet == null) 
            {
                if ((webbrowser.indexOf("Windows NT 5.1")!=-1) && (webbrowser.indexOf("SV1")!=-1)) 
                {    // Windows XP Service Pack 2
                    alert("팝업이 차단되었습니다. 브라우저의 상단 노란색 [알림 표시줄]을 클릭하신 후 팝업창 허용을 선택하여 주세요.");
                } 
                else 
                {
                    alert("팝업이 차단되었습니다.");
                }
                return false;
            }
	
            order_form.target = "BTPG_WALLET";
            order_form.action = "https://mobile.inicis.com/smart/wcard/";
            order_form.submit();
        }
        function Complete(){
            location.href = "@Url.Action("MyInfo","User")";
        }
        
    </script>
    <form id="form1" name="form1" method="post" action="https://mobile.inicis.com/smart/wcard">
        <input type="hidden" name="P_GOODS" value="membership" />
        <input type="hidden" name="P_MID" value="INIpayTest" />
        <input type="hidden" name="P_AMT" value="20000" />
        <input type="hidden" name="P_OID" value="@ViewBag.Moid" />
        <input type="hidden" name="P_NOTI" value="@ViewBag.Moid" />
        <input type="hidden" name="P_EMAIL" value="@ViewBag.EMAIL" />
        <input type="hidden" name="P_UNAME" value="@ViewBag.NAME" />
        <input type="hidden" name="P_NEXT_URL" value="@(System.Configuration.ConfigurationManager.AppSettings["Domain"] + "/Pay/MobileResult")" />
        <input type="hidden" name="P_NOTI_URL" value="@(System.Configuration.ConfigurationManager.AppSettings["Domain"] + "/Pay/MobileResult1")" />
        <input type="hidden" name="P_RETURN_URL" value="@(System.Configuration.ConfigurationManager.AppSettings["Domain"] + "/User/MyInfo?uid=")" />
        <input type="hidden" name="inipaymobile_type" value="web" />
        <input type="hidden" name="P_OFFER_PERIOD" value="M2" />
        <input type="hidden" name="P_CHARSET" value="utf8" />
        <input type="hidden" name="P_RESERVED" value="extension_enable=Y&apprun_check=Y" />

        @*<input type="button" onclick="formSubmit();" />*@
    </form>
    <script>
        on_web();
    </script>
</body>
</html>
