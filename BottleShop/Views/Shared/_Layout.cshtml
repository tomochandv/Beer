<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="TOMOCHAN">
    <title>The Bottle Shop</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Theme CSS -->
    <link href="~/Content/clean-blog.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap-dialog.min.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-80535458-1', 'auto');
        ga('send', 'pageview');

    </script>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="index.html">The Bottle Shop</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Index","Home")">Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("About","Home")">About</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Product")?bc_idx=1">Wine</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Product")?bc_idx=2">Beer</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Product")?bc_idx=3">Whisky</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Product")?bc_idx=4">Special Order</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a id="logina1" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Logged in @ViewBag.NAME</a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("MyInfo","User")" style="color:black;">My Info</a></li>
                                <li><a href="@Url.Action("Cart","User")" style="color:black;">Cart</a></li>
                                <li><a href="@Url.Action("OrderHistory","User")" style="color:black;">Order history</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a style="color:black;" href="@Url.Action("LogOut","User")">Log Out</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="@Url.Action("Login","User")">Login</a>
                        </li>
                    }
                   
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Header -->

    <!-- Set your background image for this header on the line below. -->
    <header id="himg" class="intro-header" style="background-image: url('/img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>All Of kind Alcohol</h1>
                        <hr class="small">
                        <span class="subheading">Supplies at amazing prices</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <hr>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="https://ko-kr.facebook.com/thebottleshopkorea" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; The Bottle Shop</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-dialog.min.js"></script>
    <!-- Contact Form JavaScript -->
    <script src="~/Scripts/jqBootstrapValidation.js"></script>
    <script src="~/Scripts/contact_me.js"></script>
    <!-- Theme JavaScript -->
    <script src="~/Scripts/clean-blog.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.bootpag.min.js")"></script>
    <script type="text/javascript">
        $(function () {
            rotate();
            $("body").keypress(function (event) {
                if (event.keyCode == 26) {
                    location.href = '@Url.Action("Index","Admin")';
                }
            });
        });

        var rotate = function () {
            $("#himg")
              .delay(3000).queue(function () {
                  $(this)
                    .css({ 'background-image': "url('/img/contact-bg.jpg')" })
                    .animate({ opacity: 1 }, 'slow');
                  $(this).dequeue();
              })
              .delay(3000).queue(function () {
                  $(this)
                     .css({ 'background-image': "url('/img/home-bg.jpg')" })
                     .animate({ opacity: 1 }, 'slow');
                  $(this).dequeue();
              })
              .delay(3000).queue(function (next) {
                  $(this)
                    .css({ 'background-image': "url('/img/whisky.jpg')" })
                    .animate({ opacity: 1 }, 'slow');
                  $(this).dequeue();
                  next();
              })
              .queue(rotate);
        };

    </script>
    @RenderSection("script", false)
</body>
</html>
