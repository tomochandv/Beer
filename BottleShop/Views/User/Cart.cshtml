@model System.Data.DataTable


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Cart</h3>
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th style="width: 20%; text-align: center;">카테고리</th>
                            <th style="text-align:center;">상품명</th>
                            <th style="text-align:center;">가격</th>
                            <th style="width: 60px; text-align: center;">수량</th>
                            <th style="width:60px;">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Rows.Count > 0)
                        {
                            foreach (System.Data.DataRow data in Model.Rows)
                            {
                                <tr>
                                    <td>@data["NAME"]</td>
                                    <td>@data["PR_NAME"]</td>
                                    <td>@string.Format("{0:###,###}", data["PR_PRICE"])</td>
                                    <td>
                                        <input type="number" style="width:50px;" value="1" />
                                    </td>
                                    <td>
                                        <button type="button" id="btnSearch" class="btn btn-default"><i class="fa fa-trash" aria-hidden="true"></i> 삭제</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No data.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-12" style="text-align:center;">
                <div id="page-selection"></div>
            </div>
        </div>
    </div>
</div>