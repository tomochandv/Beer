@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <link href="@Url.Content("~/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div class="container">
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">ID</label>
                <input id="txtId" type="text" class="form-control"  placeholder="ID">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input id="pwd" type="password" class="form-control" placeholder="Password">
            </div>

            <button type="button" class="btn btn-default">Login</button>
        </form>
    </div>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/vendor/bootstrap/js/bootstrap.min.js")"></script>
    <script type="text/javascript">
        $(function () {
            $("button").click(function () {
                var id = $("#txtId").val();
                var pwd = $("#pwd").val();
                $.post("@Url.Action("LoginProc")", { id: id, pwd: pwd }, function (data) {
                    if (data) {
                        location.href = '@Url.Action("Index", "Admin")';
                    }
                });
            });
        });
    </script>
</body>
</html>
