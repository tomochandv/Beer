@{Layout = null;}
<form>
    <div class="form-group">
        <label for="txtCount">생성갯수</label>
        <input type="number" class="form-control" id="txtCount">
    </div>
    <button type="button" class="btn btn-default" id="btnAddP">생성</button>
</form>
<script type="text/javascript">
    $("#btnAddP").click(function () {
        var data = Common.Ajax("@Url.Action("AddPromotion")", { count: $("#txtCount").val() });
        if (data > 0) {
            location.href = '@Url.Action("Promotion")';
        }
    });
</script>