                    </li>
                    <li>
                        <a href="@Url.Action("About","Home")">About</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Notice")">Notice</a>
                    </li>
                 
                    <li class="dropdown">
                        <a id="logina1" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            DRINK MENU
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Index","Product")?bc_idx=1" style="color:black;">Wine</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Product")?bc_idx=2" style="color:black;">Beer</a>
                            </li>
                            <li>
