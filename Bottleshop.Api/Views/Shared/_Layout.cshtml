                            </li>*@
                        </ul> 
                    </li>
                  
                    @if (Request.Cookies["bottleshop"] != null)
                    {
                        <li class="dropdown">
                            <a id="logina1" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Logged in @ViewBag.NAME 
                                <span class="caret"></span></a> 
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Info","My")" style="color:black;">My Info</a></li>
                                <li><a href="@Url.Action("Cart","Cart")" style="color:black;">Cart</a></li>
                                <li><a href="@Url.Action("Order","My")" style="color:black;">Order history</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a style="color:black;" href="@Url.Action("LogOut","Account")">Log Out</a></li>
                            </ul>
