    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header id="himg" class="intro-header" style="background-image: url('/img/home-bg.jpg'); margin-bottom:0;">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>All Kinds Alcohol</h1>
                        <hr class="small">
                        <span class="subheading">Cheapest in Korea</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="alert alert-info alert-dismissible" role="alert" style="z-index:99999; display:none;" id="divNError">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Network Error!</strong> Something Wrong. Try Again.<span id="spanNetError"><br /></span>
    </div>

    <div id="divBody" style="margin:0 0 0 0;">
        @RenderBody()
    </div>
    <hr>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="https://ko-kr.facebook.com/thebottleshopkorea" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.instagram.com/the_bottleshop_korea/" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-instagram fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">
                        <span class="glyphicon glyphicon-heart-home" aria-hidden="true"></span> 상호: 더바틀샵 <br />
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 대표자: 이승권 <br />
                        <span class="glyphicon glyphicon-tag" aria-hidden="true"></span> 사업자등록번호 : 106-12-81717<br />
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span> 주소: 서울특별시 용산구 녹사평대로54길 11 <br />
                        <span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span> 전화번호: 02-797-6425
                    </p>
                    
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-dialog.min.js"></script>
    <!-- Contact Form JavaScript -->
    <script src="~/Scripts/jqBootstrapValidation.js"></script>
    <script src="@Url.Content("~/Scripts/contact_me.js")?v=@DateTime.Now.ToString("yyyyMMddhhmmss")"></script>
    <!-- Theme JavaScript -->
    <script src="~/Scripts/clean-blog.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.bootpag.min.js")"></script>
    <script src="~/Scripts/nprogress.js"></script>
    <script type="text/javascript">
        $(function () {
            NProgress.configure({ parent: '#divBody' });

            rotate();
            $("body").keypress(function (event) {
                if (event.keyCode == 26) {
                    location.href = '@Url.Action("Index","Admin")';
                }
            });
            $(document).ajaxStart(function () {
                NProgress.start();
            }).ajaxStop(function () {
                NProgress.done();
            })
        });

        var rotate = function () {
            $("#himg")
              .delay(3000).queue(function () {
                  $(this)
                    .css({ 'background-image': "url('/img/contact-bg.jpg')" })
                    .animate({ opacity: 1 }, 'slow');
                  $(this).dequeue();
              })
              .delay(3000).queue(function () {
                  $(this)
                     .css({ 'background-image': "url('/img/home-bg.jpg')" })
                     .animate({ opacity: 1 }, 'slow');
                  $(this).dequeue();
              })
              .delay(3000).queue(function (next) {
                  $(this)
                    .css({ 'background-image': "url('/img/whisky.jpg')" })
                    .animate({ opacity: 1 }, 'slow');
                  $(this).dequeue();
                  next();
              })
              .queue(rotate);
        };

    </script>
    @RenderSection("script", false)
</body>
</html>
